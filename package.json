{
  "name": "youtubeMusic",
  "version": "0.0.1",
  "description": "Electron wrapper for YouTubeMusic desktop",
  "main": "src/index.js",
  "license": "MIT",
  "author": "Peekay <krishnamurthypranesh@users.noreply.github.com>",
  "scripts": {
    "start": "electron src/",
    "pack": "electron-builder -r babel-register --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist:linux": "electron-builder --linux -p always",
    "dist:mac": "electron-builder --x64 --mac -p always",
    "dist:win": "electron-builder --win -p always"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/krishnamurthypranesh/youtubeMusic"
  },
  "keywords": [
    "Electron",
    "YouTube",
    "music",
    "YouTubeMusic",
    "desktop"
  ],
  "devDependencies": {
    "electron": "^6.0.1",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "electron-log": "^3.0.7",
    "electron-updater": "^4.1.2"
  },
  "build": {
    "appId": "com.peekay.youtubeMusic",
    "productName": "YouTubeMusic",
    "files": [
      "./build/**/*",
      "./src/index.js"
    ],
    "linux": {
      "synopsis": "YouTubeMusic Desktop App",
      "target": [
        "AppImage"
      ],
      "category": "Application"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "krishnamurthypranesh",
        "repo": "https://github.com/krishnamurthypranesh/youtubeMusic"
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "publish": [
        "github"
      ]
    }
  }
}
